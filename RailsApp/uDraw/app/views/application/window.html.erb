<head>
  <%= stylesheet_link_tag "estilo-principal", media: "all" %>
  <%= stylesheet_link_tag "bootstrap-social", media: "all" %>
  <%= stylesheet_link_tag "estilo-window", media: "all" %>
  <%= stylesheet_link_tag "menu-principal", media: "all" %>
  <%= javascript_include_tag "window" %>
  <%= javascript_include_tag "FileSaver"%>
</head>
<%= render 'menu_application' %>
<div class="container">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">Mis Archivos Recientes</a></li>
    <li><a data-toggle="tab" href="#menu1">Archivos Compartidos Conmigo</a></li>
  </ul>
  <div id="mine" class="container-fluid flex-container ">

    <div class="tab-content">
      <div id="home" class="tab-pane fade in active">
        <div id="mine" class="container-fluid flex-container ">
          <% @my_documents.each do |diagram| %>
              <div class="panel panel-default flex-item boxshadow thumbnail-hover">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <%= diagram.name %>
                    <%= link_to diagram, method: :delete, data: { confirm: 'Are you sure?' }, class: 'close', ariaLabel: 'Close' do %>
                        <span aria-hidden="true">&times;</span>
                    <% end %>
                  </h3>
                </div>
                <div class="panel-body">
                  <%= link_to diagram, method: :get do %>
                      <svg class="img-responsive img-responsive1"><%= diagram.image.html_safe %></svg>
                  <% end %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
      <div id="menu1" class="tab-pane fade">
        <div id="shared" class="container-fluid flex-container ">
          <% @shared_documents.each do |diagram|%>
              <div class="panel panel-default flex-item boxshadow thumbnail-hover">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <%= diagram.name %>
                    <%= link_to diagram, method: :delete, data: { confirm: 'Are you sure?' }, class: 'close', ariaLabel: 'Close' do %>
                        <span aria-hidden="true">&times;</span>
                    <% end %>
                  </h3>
                </div>
                <div class="panel-body">
                  <%= link_to diagram, method: :get do %>
                      <svg class="img-responsive img-responsive1"><%= diagram.image.html_safe %></svg>
                  <% end %>
                </div>
              </div>
              <% end %>
        </div>
      </div>
    </div>
  </div>

  <div id="btn-holder">

  </div>
</div>
<%= render 'footer' %>