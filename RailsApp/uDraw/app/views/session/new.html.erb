<head>
  <%= stylesheet_link_tag "bootstrap-social", media: "all" %>
  <%= stylesheet_link_tag "estilo-principal", media: "all" %>
  <%= stylesheet_link_tag "menu-principal", media: "all" %>
  <%= stylesheet_link_tag "login", media: "all" %>
</head>
<%= render 'menu_principal' %>
<section>
  <div class="row div-background flex-center">
    <div class="flex-container whiteDiv col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
      <div>
        <h1 style="margin-left: 40px">Cuenta Espol</h1>
        <%= image_tag('ESPOL.png', alt: 'logo de espol', width:'64', height:'64', style: 'margin-left: 120px; margin-top: -30px')%>
        <div class="form-group">
          <%= form_for(:session, url: signin_path) do |f| %>
              <label for="email">Correo Electr&oacute;nico:</label><br />
              <%= f.text_field :email, :placeholder => "Email" %>
              <label for="email">@espol.edu.ec</label><br />
              <label for="password">Contrase&ntilde;a:</label><br />
              <%= f.password_field :password, :placeholder => "*****" %>
              <br/><br/>
              <%= f.submit "Ingresar", class: "btn btn-primary center-block" %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'footer' %>
