<head>
  <%= stylesheet_link_tag "estilo-principal", media: "all" %>
  <%= stylesheet_link_tag "bootstrap-social", media: "all" %>
  <%= stylesheet_link_tag "estilo-window", media: "all" %>
  <%= stylesheet_link_tag "menu-principal", media: "all" %>
  <%= javascript_include_tag "window" %>
  <%= javascript_include_tag "FileSaver"%>
</head>
<%= render 'menu_application' %>
<h1>Listing Diagrams</h1>
<p id="notice"><%= notice %></p>
<table class="table">
  <thead>
  <tr>
    <th>Diagrama</th>
    <th>Nombre</th>
    <th>Propietario</th>
    <th>Image</th>
    <th>Global ID</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @diagrams.each do |diagram| %>
      <tr>
        <td><%= link_to diagram.id, diagram %></td>
        <td><%= link_to diagram.name, diagram %></td>
        <td><%= diagram.users.first.name %></td>
        <td><%= diagram.image %></td>
        <td><%= diagram.global_id %></td>
        <td><%= link_to 'Show', diagram %></td>
        <td><%= link_to 'Edit', edit_diagram_path(diagram) %></td>
        <td><%= link_to 'Destroy', diagram, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diagram', new_diagram_path, class:'btn btn-primary' %>
